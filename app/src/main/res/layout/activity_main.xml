<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/waterblue">

    <!--background -->
    <ImageView
        android:id="@+id/background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cloudysun"
        android:scaleType="fitStart"
        />
    <!-- charater frame-->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/platform2"
            android:layout_gravity="bottom|center"/>
        <!-- CHARATER FRAME!!! -->
        <ImageView
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_gravity="center"
            android:id="@+id/seal"
            android:src="@drawable/seal"
            android:layout_marginBottom="20dp"/>
    </FrameLayout>
    <ImageView
        android:id="@+id/backgroundgif"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitStart"
        android:scaleY="1.5"
        android:scaleX="1.5"
        />
    <!-- Top frame-->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:layout_width="400dp"
            android:layout_height="200dp"
            android:scaleType="fitStart"
            android:src="@drawable/overlay1"/>
        <TextClock
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="40dp"
            android:textSize="40sp"
            android:format12Hour="hh:mm"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/hunger1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/fish"
                android:layout_marginTop="65dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                />
            <ImageView
                android:id="@+id/hunger2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/fish"
                android:layout_marginTop="65dp"
                android:layout_marginRight="10dp"
                />
            <!-- set them bigger in code bc they small -->
            <ImageView
                android:id="@+id/hunger3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/half"
                android:layout_marginTop="65dp"
                android:layout_marginRight="10dp"
                />
            <ImageView
                android:id="@+id/hunger4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/emptyfish"
                android:layout_marginTop="65dp"
                android:layout_marginRight="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/shoe"
                android:layout_marginTop="19dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="20dp"
                />
            <TextView
                android:id="@+id/stepcounttext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="35sp"
                android:text="@string/noData"/>
        </LinearLayout>
    </FrameLayout>

    <!-- settings button-->
    <FrameLayout
        android:id="@+id/setting"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/button2"
            android:scaleType="fitEnd"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/gear"
            android:layout_gravity="center"/>
    </FrameLayout>
"
    <!-- feed button-->
    <FrameLayout
        android:id="@+id/feedingbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:focusable="true">
        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/button1" />
        <!-- inner text -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Feed"
                android:textSize="35sp"
                />
        </LinearLayout>
    </FrameLayout>

    <!-- fish button -->
    <FrameLayout
        android:id="@+id/fishbutton"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/button2"
            android:scaleType="fitEnd"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/fish"
            android:layout_gravity="center"/>
    </FrameLayout>

    <!-- stat button -->
    <FrameLayout
        android:id="@+id/statbutton"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/button2"
            android:scaleType="fitEnd"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ribbon"
            android:layout_gravity="center"/>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>